<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cardViewRS"
    android:layout_width="match_parent"
    android:layout_height="88dp"
    android:layout_margin="10dp"
    android:layout_marginBottom="5dp"
    card_view:cardCornerRadius="8dp"
    card_view:cardElevation="2dp">

    <RelativeLayout
        android:id="@+id/relativeLayoutRS"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp">

        <TextView
            android:id="@+id/textViewCardNameRS"
            android:layout_width="370dp"
            android:layout_height="40dp"
            android:layout_marginStart="5dp"
            android:layout_marginTop="25dp"
            android:gravity="center"
            android:textSize="15sp"
            tools:text="Сверло по кафелю, керамике и стеклу URAGAN 10мм (29830-10) с двумя режущими лезвиями. цилиндрический хвостовик" />

        <TextView
            android:id="@+id/textViewCardIDRS"
            android:layout_width="140dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="234dp"
            android:layout_marginTop="4dp"
            android:gravity="right"
            android:text="2200000990020"
            android:textColor="@android:color/black"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/textViewCardAmountRS"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:layout_marginTop="4dp"
            android:gravity="left"
            android:text="1000 шт."
            android:textColor="@android:color/black"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/textViewCardPriceRS"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="25dp"
            android:layout_marginTop="4dp"
            android:layout_toEndOf="@+id/textViewCardAmountRS"
            android:gravity="center"
            android:text="25000 руб."
            android:textColor="@android:color/black"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/textViewCardSubdivRS"
            android:layout_width="370dp"
            android:layout_height="20dp"
            android:layout_marginStart="5dp"
            android:layout_marginTop="65dp"
            android:text="TextView"
            android:textColor="@android:color/background_dark" />
    </RelativeLayout>
</android.support.v7.widget.CardView>